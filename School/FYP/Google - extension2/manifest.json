{
    "manifest_version": 3,
    "name": "Chuck Norris Jokes",
    "description": "Connects to an online API and genrates random jokes everyday",
    "version": "1.0",
    "icons": 
    {
        "16": "/assets/icon-128.png",
        "48": "/assets/icon-128.png",
        "128": "/assets/icon-128.png"
    },
    "action": 
    {
        "default-icon": 
        {
            "16": "/assets/icon-128.png",
            "48": "/assets/icon-128.png",
            "128": "/assets/icon-128.png"
        },
        "default_title": "Chuck Norris Jokes",
        "default_popup": "popup.html"
    },
    "permissions": ["storage", "tabs"]
}