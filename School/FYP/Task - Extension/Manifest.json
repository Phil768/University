{
    "manifest_version": 3,
    "name": "Task Manager",
    "description": "Create and delete new Tasks to complete.",
    "version": "1.0",
    "icons": 
    {
        "16": "/assets/icon-16.png",
        "48": "/assets/icon-48.png",
        "128": "/assets/icon-128.png"
    },
    "action": 
    {
        "default-icon": 
        {
            "16": "/assets/icon-16.png",
            "48": "/assets/icon-48.png",
            "128": "/assets/icon-128.png"
        },
        "default_title": "Task Manager",
        "default_popup": "popup.html"
    },
    "permissions": ["storage", "tabs"]
   
}